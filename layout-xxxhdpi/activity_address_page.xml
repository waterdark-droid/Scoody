<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AddressPage">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_bold"
        android:text="@string/enter_details"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.03">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_medium"
                    android:text="First Name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/star"
                    android:textColor="#FF2E2E"
                    android:textSize="16sp"

                    />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:textCursorDrawable="@drawable/text_cursor_deepblue"
                android:background="@drawable/white_edittext_bg"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="15"
                android:padding="4dp"

                android:textSize="15sp" />
        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="Middle Name"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/middleName"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_cursor_deepblue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="15"
                android:padding="4dp"
                android:textSize="15sp" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_medium"
                    android:text="Last Name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/star"
                    android:textColor="#FF2E2E"
                    android:textSize="16sp"

                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_cursor_deepblue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="15"
                android:padding="4dp"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.16"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:textColor="#FF2E2E"
                android:textSize="16sp"

                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:background="@drawable/white_edittext_bg"
            android:fontFamily="@font/sora_medium"
            android:textCursorDrawable="@drawable/text_cursor_deepblue"
            android:inputType="number"
            android:maxLength="3"
            android:padding="4dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.29">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="Gender"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:textColor="#FF2E2E"
                android:textSize="16sp"

                />
        </LinearLayout>



        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="Male"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/female_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="Female"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.37"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sora_semibold"
            android:text="Address"
            android:textColor="@color/white"

            android:textSize="16sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/star"
            android:textColor="#FF2E2E"
            android:textSize="16sp"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.45">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/h_no"
                android:textColor="@color/white"

                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/houseNo"
                android:layout_width="106dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:fontFamily="@font/sora_medium"
                android:textCursorDrawable="@drawable/text_cursor_deepblue"
                android:inputType="text"
                android:maxLength="7"
                android:padding="4dp"
                android:textSize="15sp" />
        </LinearLayout>

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/s_l"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/streetName"
                android:layout_width="196dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="60"
                android:padding="4dp"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.57">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/city"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/cityName"
                android:layout_width="156dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="15"
                android:padding="4dp"
                android:textSize="15sp" />


        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/country"
                android:textColor="@color/white"

                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/countryName"
                android:layout_width="166dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="20"
                android:padding="4dp"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.70">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/state"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/stateName"
                android:layout_width="156dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="20"
                android:padding="4dp"
                android:textSize="15sp" />

        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"

                android:text="District"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/districtName"
                android:layout_width="166dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="text"
                android:maxLength="20"
                android:padding="4dp"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.83">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_medium"
                android:text="@string/pin"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="156dp"
                android:layout_height="38dp"
                android:background="@drawable/white_edittext_bg"
                android:textCursorDrawable="@drawable/text_color_blue"
                android:fontFamily="@font/sora_medium"
                android:inputType="number"
                android:maxLength="6"
                android:padding="4dp"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="103dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.938"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitbtn"
            android:layout_width="103dp"
            android:layout_height="48dp"
            android:background="@drawable/button_style"
            android:elevation="5dp"
            android:fontFamily="@font/sora_medium"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="16sp"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="6dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>